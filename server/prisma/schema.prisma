// Define the datasource for PostgreSQL
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the Prisma client generator
generator client {
    provider = "prisma-client-js"
}

// Define the User model
model User {
  userId    Int     @unique @id @default(autoincrement())
  username  String
  firstname String
  lastname  String
  email     String   @unique
  password  String
  role      String   @default("user")
  questions Question[]
  answers   Answer[]
}

// Define the Question model
model Question {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String
  user        User     @relation(fields: [userId], references: [userId])
  answers     Answer[]
}

// Define the Answer model
model Answer {
  id          Int      @id @default(autoincrement())
  userId      Int
  questionId  Int
  answer      String
  user        User     @relation(fields: [userId], references: [userId])
  question    Question @relation(fields: [questionId], references: [id])
}
