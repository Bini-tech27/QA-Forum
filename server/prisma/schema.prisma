datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
  userId    Int     @unique @id @default(autoincrement())
  username  String
  firstname String
  lastname  String
  email     String @unique
  password  String
  questions Question[]
  answers   Answer[]
}

model Question {
  id          Int      @id @default(autoincrement())
  userId      Int
  title       String
  description String
  user        User     @relation(fields: [userId], references: [userId])
  answers     Answer[]
}

model Answer {
  id          Int      @id @default(autoincrement())
  userId      Int
  questionId  Int      
  answer      String
  user        User     @relation(fields: [userId], references: [userId])
  question    Question @relation(fields: [questionId], references: [id])
}

